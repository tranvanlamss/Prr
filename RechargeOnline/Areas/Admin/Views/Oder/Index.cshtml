@model IEnumerable<RechargeOnline.Models.Oder>

@{
    ViewBag.Title = "Index";
}
<style>
    table {
        margin-top: 40px;
    }

        table tr td {
            border: solid 0.2px #7b42f5;
        }

    th {
        background-color: #7b42f5;
        color: white;
    }
</style>
<h2>Hóa Đơn</h2>

<div>
    @using (Html.BeginForm("Index", "Oder", FormMethod.Get))
    {

        @Html.TextBox("search") <input type="submit" value="Search" />
    }


</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Phone_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_Brand)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Id_Product)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Card_Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Create_At)
        </th>
        <th>Dịch Vụ</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Phone_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Id_Product)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Card_Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Create_At)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
